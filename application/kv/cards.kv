<CustomerCard>:
    size_hint_y: None
    height: content.height

    MDCardSwipeFrontBox:
        MDGridLayout:
            height: 100
            size_hint_y: None
            cols: 5
            rows: 1
            spacing: 10
            id: content
            MDTextField:
                width: 100
                size_hint_x: None
                text: root.customerCode
            MDTextField:
                text: root.customerName
            MDTextField:
                text: root.customerLocation
            MDTextField:
                width: 100
                size_hint_x: None
                text: root.customerPhone
            MDBoxLayout:
                width: 50
                size_hint_x: None
                orientation: 'vertical'
                MDIconButton:
                    icon: "content-save-edit"
                    theme_icon_color: "Custom"
                    icon_color: app.save_color
                    on_press: app.update_customer(root)

                MDIconButton:
                    icon: "trash-can"
                    theme_icon_color: "Custom"
                    icon_color: app.error_color
                    pos_hint: {"center_y": .5}
                    on_press: app.delete_customer(root)


